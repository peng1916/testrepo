<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.ShopCartItemDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="queryById" resultType="ShopCartItem" parameterType="long">
		<!-- 具体的sql -->
		SELECT
			id,
			cartId,
			productId,
			quantity,
			status 
		FROM
			shoppingcartitem
		WHERE
			id = #{id}
	</select>
	
	<select id="queryAll" resultType="ShopCartItem">
		SELECT
			id,
			cartId,
			productId,
			quantity,
			status 
		FROM
			shoppingcartitem
		ORDER BY
			id
		LIMIT #{offset}, #{limit}
	</select>
