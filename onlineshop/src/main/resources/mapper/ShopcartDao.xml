<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.ShopcartDao">
	<!-- 目的：为dao接口方法提供sql语句配置 -->
	<select id="queryById" resultType="Shopcart" parameterType="long">
		<!-- 具体的sql -->
		SELECT
		  id,
		  status,
		  userId 
		FROM
			shoppingcart
		WHERE
			id = #{id}
	</select>
	
	<select id="queryAll" resultType="Shopcart">
		SELECT
		  id,
		  status,
		  userId 
		FROM
			shoppingcart
		ORDER BY
			id
		LIMIT #{offset}, #{limit}
	</select>
